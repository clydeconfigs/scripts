#!/usr/bin/bash

set -e 

test -e "$HOME/Desktop/Recordings" || mkdir "$HOME/Desktop/Recordings"
test -e "$HOME/Desktop/Recordings/screenshot-recordings" || mkdir "$HOME/Desktop/Recordings/screenshot-recordings"

counter=1
folder="$HOME/Desktop/Recordings/screenshot-recordings$(date -R)"

test -e "$folder" || mkdir "$folder"

while true; do
    filename="$folder/screenshot_$counter.png"

    maim --format png /dev/stdout > "$filename"

    time avifenc "$filename" -o "$folder/screenshot_$counter.avif"
    
    rm "$filename"

    ((counter++))
    
done
